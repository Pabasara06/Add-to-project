<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when checked (favorited) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="?attr/colorSecondaryVariant" />
            <stroke android:width="1dp" android:color="?attr/colorSecondary" />
        </shape>
    </item>
    <!-- State when not checked (not favorited) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="?attr/colorSurface" />
            <stroke android:width="1dp" android:color="?attr/dividerColor" />
        </shape>
    </item>
</selector>